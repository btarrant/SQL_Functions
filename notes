-- MySQL Functions

-- Text
-- CONCAT()
SELECT CONCAT('Mr. ', first_name, ' ', last_name) AS 'first and last' FROM clients;
-- CONCAT_WS()
SELECT CONCAT_WS(' ', first_name, last_name) AS 'first and last' FROM clients;
-- LENGTH()
SELECT LENGTH(last_name) AS 'last name length' FROM clients;
-- LOWER()
SELECT LOWER(first_name) AS 'First Name' FROM clients;

-- Date
-- HOUR()
SELECT HOUR(joined_datetime) AS date_hour FROM clients;
-- DAYNAME()
SELECT DAYNAME(joined_datetime) AS day_name, joined_datetime FROM clients;
-- MONTH()
SELECT MONTH(joined_datetime) AS date_hour, joined_datetime FROM clients;
-- NOW()
SELECT NOW();
-- DATE_FORMAT()
SELECT DATE_FORMAT(joined_datetime, '%W %M %e, %Y') FROM clients;
